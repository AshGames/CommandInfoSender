@page
@model Microsoft.AspNetCore.Mvc.RazorPages.PageModel
@{
    ViewData["Title"] = "Une erreur est survenue";
}

<section class="flex min-h-[60vh] flex-col items-center justify-center text-center">
    <div class="card-glass max-w-lg space-y-4 p-10">
        <h1 class="text-3xl font-semibold text-slate-900">Une erreur est survenue</h1>
        <p class="text-sm text-slate-500">
            Nous avons rencontré un incident lors du traitement de votre demande. L'équipe technique a été informée.
        </p>
        <a asp-page="/Index" class="inline-flex items-center gap-2 rounded-lg bg-emerald-600 px-4 py-2 text-sm font-semibold text-white shadow-lg shadow-emerald-500/30 transition hover:bg-emerald-700">
            Retour au tableau de bord
        </a>
    </div>
</section>
