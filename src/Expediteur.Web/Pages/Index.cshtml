@page
@model IndexModel
@{
    ViewData["Title"] = "Tableau de bord";
    var derniereExecution = Model.DernieresExecutions.FirstOrDefault();
}

<section class="space-y-8">
    @if (!string.IsNullOrEmpty(Model.Notification))
    {
        <div class="rounded-xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-emerald-700 shadow-sm">
            @Model.Notification
        </div>
    }

    <div class="grid gap-6 md:grid-cols-3">
        <article class="card-glass p-6">
            <h2 class="text-sm uppercase tracking-wide text-slate-500">Prochaine exécution</h2>
            <p class="mt-2 text-3xl font-semibold text-slate-900">
                @(Model.Configuration?.ProchaineExecution.ToLocalTime().ToString("dd MMMM yyyy à HH:mm"))
            </p>
            <p class="mt-1 text-sm text-slate-500">Intervalle actuel : @(Model.Configuration?.IntervalleHeures ?? 0) heure(s)</p>
            <p class="mt-1 text-sm">
                <span class="inline-flex items-center rounded-full px-3 py-1 text-xs font-medium @(Model.Configuration?.EstActif == true ? "bg-emerald-100 text-emerald-700" : "bg-rose-100 text-rose-700")">
                    @(Model.Configuration?.EstActif == true ? "Planification active" : "Planification désactivée")
                </span>
            </p>
        </article>
        <article class="card-glass p-6">
            <h2 class="text-sm uppercase tracking-wide text-slate-500">Dernier envoi</h2>
            <p class="mt-2 text-3xl font-semibold text-slate-900">
                @(derniereExecution?.DateExecution.ToLocalTime().ToString("dd MMMM yyyy à HH:mm") ?? "—")
            </p>
            <p class="mt-2 text-sm text-slate-500">
                @(derniereExecution is null ? "Aucune exécution enregistrée" : derniereExecution.EstReussie ? "Succès" : "Échec")
            </p>
            @if (derniereExecution is not null)
            {
                <p class="mt-1 text-xs text-slate-400">@derniereExecution.Message</p>
            }
        </article>
        <article class="card-glass flex flex-col justify-between p-6">
            <div>
                <h2 class="text-sm uppercase tracking-wide text-slate-500">Déclenchement manuel</h2>
                <p class="mt-2 text-sm text-slate-500">
                    Lancez immédiatement l'envoi des accusés. Une entrée sera ajoutée à l'historique.
                </p>
            </div>
            <form method="post" asp-page-handler="Declencher" class="mt-4">
                <button type="submit" class="w-full rounded-lg bg-emerald-600 px-4 py-3 text-sm font-semibold text-white shadow-lg shadow-emerald-500/30 transition hover:bg-emerald-700">
                    Déclencher maintenant
                </button>
            </form>
        </article>
    </div>

    <section class="card-glass p-6">
        <header class="flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
            <div>
                <h2 class="text-xl font-semibold text-slate-900">Historique récent</h2>
                <p class="text-sm text-slate-500">Les 10 dernières exécutions sont listées ci-dessous.</p>
            </div>
            <a class="inline-flex items-center gap-2 rounded-lg border border-slate-200 px-4 py-2 text-sm font-medium text-slate-600 transition hover:border-emerald-300 hover:text-emerald-600" asp-page="/Historique">
                Voir tout l'historique
            </a>
        </header>
        <div class="mt-4 overflow-hidden rounded-xl border border-slate-200">
            <table class="min-w-full table-modern">
                <thead>
                    <tr>
                        <th class="text-left">Date</th>
                        <th class="text-left">Commande</th>
                        <th class="text-left">Destinataire</th>
                        <th class="text-left">Statut</th>
                        <th class="text-left">Message</th>
                    </tr>
                </thead>
                <tbody class="bg-white">
                    @if (!Model.DernieresExecutions.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-slate-500">Aucune exécution enregistrée pour le moment.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var execution in Model.DernieresExecutions)
                        {
                            <tr>
                                <td>@execution.DateExecution.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@execution.NumeroCommande</td>
                                <td>@execution.Destinataire</td>
                                <td>
                                    <span class="inline-flex items-center gap-1 rounded-full px-3 py-1 text-xs font-semibold @(execution.EstReussie ? "bg-emerald-100 text-emerald-700" : "bg-rose-100 text-rose-700")">
                                        @(execution.EstReussie ? "Succès" : "Échec")
                                    </span>
                                </td>
                                <td class="text-sm text-slate-500">@execution.Message</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </section>
</section>
