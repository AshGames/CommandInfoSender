@page
@model HistoriqueModel
@{
    ViewData["Title"] = "Historique complet";
}

<section class="space-y-6">
    <header class="flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
        <div>
            <h1 class="text-3xl font-semibold text-slate-900">Historique complet</h1>
            <p class="text-sm text-slate-500">Les 100 dernières exécutions du service d'envoi d'accusés.</p>
        </div>
        <a asp-page="/Index" class="inline-flex items-center gap-2 rounded-lg border border-slate-200 px-4 py-2 text-sm font-medium text-slate-600 transition hover:border-emerald-300 hover:text-emerald-600">
            ⟵ Retour au tableau de bord
        </a>
    </header>

    <div class="card-glass overflow-hidden">
        <table class="min-w-full table-modern">
            <thead>
                <tr>
                    <th class="text-left">Date</th>
                    <th class="text-left">Commande</th>
                    <th class="text-left">Destinataire</th>
                    <th class="text-left">Statut</th>
                    <th class="text-left">Message</th>
                </tr>
            </thead>
            <tbody class="bg-white">
                @if (!Model.Historique.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center text-slate-500">Aucun historique disponible.</td>
                    </tr>
                }
                else
                {
                    foreach (var execution in Model.Historique)
                    {
                        <tr>
                            <td>@execution.DateExecution.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@execution.NumeroCommande</td>
                            <td>@execution.Destinataire</td>
                            <td>
                                <span class="inline-flex items-center gap-1 rounded-full px-3 py-1 text-xs font-semibold @(execution.EstReussie ? "bg-emerald-100 text-emerald-700" : "bg-rose-100 text-rose-700")">
                                    @(execution.EstReussie ? "Succès" : "Échec")
                                </span>
                            </td>
                            <td class="text-sm text-slate-500">@execution.Message</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</section>
